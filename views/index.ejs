<% include ./partials/header.ejs %>
<div
  class="container mx-auto min-h-screen flex items-center justify-center bg-[url('https://images.unsplash.com/photo-1454117096348-e4abbeba002c?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] bg-cover"
>
  <main class="bg-white p-8 rounded-lg shadow-md w-full max-w-sm">
    <!-- Pinterest logo -->
    <div class="flex justify-center mb-6">
      <img
        src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png"
        alt="Pinterest logo"
        class="w-14"
      />
    </div>
    <p class="text-center text-2xl font-semibold mb-6">Log in to see more</p>

    <!-- <% if (typeof error !== 'undefined' && error.length > 0) { %> -->
    <p class="text-red-500 mb-4 text-center"><!--<%= error %>--></p>
    <!-- <% } %> -->

    <form action="/login" method="post" class="flex flex-col gap-4">
      <label for="username" class="sr-only">Username</label>
      <input
        id="username"
        name="username"
        type="text"
        placeholder="Username"
        class="py-2 px-3 border-2 border-gray-300 rounded-xl outline-none text-zinc-700"
        required
      />

      <label for="password" class="sr-only">Password</label>
      <input
        id="password"
        name="password"
        type="password"
        placeholder="Password"
        class="py-2 px-3 border-gray-300 border-2 rounded-xl outline-none text-zinc-700"
        required
      />

      <input
        class="bg-red-600 text-white py-2 px-3 rounded-full cursor-pointer hover:bg-red-700"
        value="Login to Profile"
        type="submit"
      />
    </form>

    <a href="/forget" class="block text-center text-blue-500 mt-4"
      >Forgot your password?</a
    >

    <footer class="mt-6">
      <p class="text-center text-gray-600 text-sm">
        By continuing, you agree to Pinterest's
        <b>Terms of Service, Privacy Policy.</b>
      </p>
      <hr class="my-4" />
      <p class="text-center text-sm">
        Not on Pinterest yet?
        <a href="/register" class="text-blue-500">Sign up</a>
      </p>
    </footer>
  </main>
</div>

<% include ./partials/footer.ejs %>
